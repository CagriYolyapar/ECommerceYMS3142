@model OrderVM
@{
    ViewBag.Title = "SiparisiOnayla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SiparisiOnayla</h2>

<div class="form">
    @using (Html.BeginForm("SiparisiOnayla", "Shopping", FormMethod.Post, new { @class = "form-horizontal tasi-form" }))
    {
        <div class="form-group">
            <label class="col-sm-2 control-label">Gonderim Adresi </label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.ShippedAddress, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"> Kart Numarası</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentVM.CardNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart güvenlik numarası </label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentVM.SecurityNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kullanım Tarihi Son Yıl</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentVM.CardExpiryYear, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label">Kullanım Tarihi Son Ay </label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentVM.CardExpiryMonth, new { @class = "form-control" })
            </div>
        </div>





        <div class="form-group">
            <label class="col-sm-2 control-label">Kart üzerindeki isim</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentVM.CardUserName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Emailiniz</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.Email, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label">Onayla</label>
            <div class="col-sm-10">
                <button class="btn btn-primary">Onay</button>
            </div>
        </div>


    }
</div>